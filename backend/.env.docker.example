# Variables de entorno para Docker - EJEMPLO
# Copia este archivo como .env.docker y ajusta los valores

# Configuración del proyecto
PROJECT_NAME=RecWay API
DEBUG=true

# Configuración del servidor
HOST=0.0.0.0
PORT=8000

# Base de datos PostgreSQL para Docker
POSTGRES_SERVER=recway_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=TU_PASSWORD_AQUI
POSTGRES_DB=recWay_db
POSTGRES_PORT=5432

# Para compatibilidad con código anterior
PG_CONN=postgresql://postgres:TU_PASSWORD_AQUI@recway_db:5432/recWay_db
